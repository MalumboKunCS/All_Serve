rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Provider verification documents - secure access
    match /providers/{providerId}/docs/{file} {
      allow read: if request.auth != null && (
         request.auth.uid == resource.metadata.ownerUid ||
         request.auth.token.admin == true
      );
      allow write: if request.auth != null && 
                     request.auth.uid == request.resource.metadata.ownerUid;
    }

    // Provider images - public read, owner write
    match /providers/{providerId}/images/{file} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == request.resource.metadata.ownerUid;
    }

    // User profile images - owner only
    match /users/{userId}/profile/{file} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId;
    }

    // General uploads - authenticated users only
    match /uploads/{userId}/{file} {
      allow read: if true;
      allow write: if request.auth != null && 
                     request.auth.uid == userId;
    }

    // Admin uploads - admin only
    match /admin/{file} {
      allow read, write: if request.auth != null && 
                          request.auth.token.admin == true;
    }
  }
}



